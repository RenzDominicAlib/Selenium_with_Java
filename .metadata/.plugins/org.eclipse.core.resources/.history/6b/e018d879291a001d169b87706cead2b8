package Lesson_4;

public class Method_overloading_challenge_2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		getDurationString(15, 0);

	}
	
	public static int getDurationString(int minutes, int seconds) {
		
		if(minutes >= 0 && seconds >= 0 && seconds <= 59){
			
			int totalTime = minutes + (seconds/60);
			int convertedHours = (totalTime/60);
			int remainingMins = (totalTime%60);
			int convertedMins = (remainingMins/60);
			int convertedSeconds = (remainingMins%60);				
			System.out.println(convertedHours + "h "+ convertedMins + "m " + convertedSeconds +"s");
			return totalTime;
			
		}	
		System.out.println("Invalid value");
		return -1;
	}
	
	public static int getDurationString(int seconds) {
			
			
		if(seconds >= 0){	
			
			int totalTime = seconds/60;
			int convertedHours = (totalTime/60);
			int remainingMins = (totalTime%60);
			int convertedMins = (remainingMins/60);
			int convertedSeconds = (remainingMins%60);						
			System.out.println(convertedHours + "h "+ convertedMins + "m " + convertedSeconds +"s");
			return totalTime;
			
		}
		System.out.println("Invalid value");
		return -1;
	}
	

}

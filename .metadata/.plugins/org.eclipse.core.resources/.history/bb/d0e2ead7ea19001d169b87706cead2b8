package Lesson_4;

public class Method_challenge_1 {

	public static void main(String[] args) {
		
		String name = "Kurama";
		int score = 1500;
		int place = calculateHighScorePosition(score);
		displayHighScorePosition(name, place);
		
		String name = "Loki";
		int score = 1500;
		int place = calculateHighScorePosition(score);
		displayHighScorePosition(name, place);

		String name = "Bella";
		int score = 1500;
		int place = calculateHighScorePosition(score);
		displayHighScorePosition(name, place);
		
		String name = "Cookie";
		int score = 1500;
		int place = calculateHighScorePosition(score);
		displayHighScorePosition(name, place);
		

	}
	
	public static void displayHighScorePosition(String name, int place) {
		
		System.out.println("*** Congratulations " + name + " you've got the "+ place + " place! ***");
	}
	
	public static int calculateHighScorePosition(int score) {
		
		if(score >= 1000) {
			return 1;
		}else if(score >= 500 && score < 1000) {
			return 2;
		}else if(score >= 100 && score < 500) {
			return 3;
		}
			return 4;
				
	}

}
